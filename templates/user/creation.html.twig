{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <div class="row">
      
    </div>
    <table class="table mx-auto stats">
        <!--force ligne-->
        <tr>
            <td><p>Force :</p></td>
            <td id="force"></td>
            <td><button type="button" id="btnP" ><i class="fas fa-plus "></i></button>
                    <button type="button" id="btnP"><i class="fas fa-minus"></i></button></td>
        </tr>
        <!--dext ligne-->
        <tr>
            <td><p>Dexterite :</p></td>
            <td id="dext"></td>
            <td><button type="button" id="btnP" ><i class="fas fa-plus "></i></button>
                    <button type="button" id="btnP"><i class="fas fa-minus"></i></button></td>
        </tr>
        <!--const ligne-->
        <tr>
            <td><p>Constitution :</p></td>
            <td id="const"></td>
            <td><button type="button" id="btnP" ><i class="fas fa-plus "></i></button>
                    <button type="button" id="btnP"><i class="fas fa-minus"></i></button></td>
        </tr>
        <tr>
            <td>HP : <span id="hp"></span></td>
            <td><button type="button" id="change">Relance</button>
            <button type="submit" id="valide">Choisir</button></td>
        </tr>
    </table>
    <div class="mx-auto carou" style="display:none; height:300px;">
    <div id="carouselExampleControls" class="carousel slide mx-auto" data-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img class="d-block w-10 border border-dark mx-auto" src="image/avatar1.png" alt="First slide">
          </div>
          <div class="carousel-item">
            <img class="d-block w-10 border border-dark mx-auto" src="image/avatar2.png" alt="Second slide">
          </div>
          <div class="carousel-item">
            <img class="d-block w-10 border border-dark mx-auto" src="image/avatar3.png" alt="thirdth slide">
          </div>
          <div class="carousel-item">
            <img class="d-block w-10 border border-dark mx-auto" src="image/avatar4.png" alt="fourth slide">
          </div>
          <div class="carousel-item">
            <img class="d-block w-10 border border-dark mx-auto" src="image/avatar5.png" alt="fifth slide">
          </div>
          <div class="carousel-item">
            <img class="d-block w-10 border border-dark mx-auto" src="image/avatar6.png" alt="sixth slide">
          </div>
          <div class="carousel-item">
            <img class="d-block w-10 border border-dark mx-auto" src="image/avatar7.png" alt="seventh slide">
          </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
    </div>
    <div>
        <button type="submit" class="btn btn-dark btn-lg mx-auto col-md-12">Choisir</button>
      </div>
    
    <div class="row">
        
    </div>
</div>
{% endblock %}